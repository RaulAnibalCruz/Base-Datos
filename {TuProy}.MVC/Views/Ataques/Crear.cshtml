@model Bloody_Roar_2.Ataque

<h2>Crear nuevo Ataque</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label for="Tipo_Ataque">Tipo de Ataque</label>
        <input asp-for="Tipo_Ataque" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Danio">Da√±o</label>
        <input asp-for="Danio" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label for="IdPersonaje">Personaje</label>
        <select asp-for="IdPersonaje" class="form-control">
            <option value="">Seleccione un personaje</option>
            @foreach (var p in ViewBag.Personajes)
            {
                <option value="@p.IdPersonaje">@p.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
