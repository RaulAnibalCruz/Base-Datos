@model IEnumerable<Bloody_Roar_2.Ataque>

<h2>Lista de Ataques</h2>

<a class="btn btn-primary mb-3" asp-action="Crear">Crear nuevo ataque</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tipo de Ataque</th>
            <th>Daño</th>
            <th>Personaje</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ataque in Model)
        {
            <tr>
                <td>@ataque.IdAtaque</td>
                <td>@ataque.Tipo_Ataque</td>
                <td>@ataque.Danio</td>
                <td>@ataque.NombrePersonaje</td>
                <td>
                    <form asp-action="Eliminar" asp-route-id="@ataque.IdAtaque" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('¿Eliminar este ataque?')">
                            Eliminar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Volver a inicio</a>