@model IEnumerable<Bloody_Roar_2.CombateCompleto>

@{
    ViewData["Title"] = "Lista de Combates";
}

<h2>Combates Registrados</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Crear Nuevo Combate
    </a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <strong>¡Aún no hay combates registrados!</strong><br />
        Haz clic en el botón verde para crear el primero.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Personaje</th>
                <th>Usuario</th>
                <th>Modo de Juego</th>
                <th>Duración</th>
                <th>Fecha y Hora</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.IdCombate</td>
                    <td><strong>@c.NombrePersonaje</strong></td>
                    <td>@c.NombreUsuario</td>
                    <td>@c.NombreModoJuego</td>
                    <td>@c.Duracion seg.</td>
                    <td>@c.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@c.IdCombate" class="btn btn-sm btn-info">Ver</a>
                        <form asp-action="Eliminar" asp-route-id="@c.IdCombate" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" 
                                    onclick="return confirm('¿Eliminar este combate?')">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}