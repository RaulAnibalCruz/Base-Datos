@model Bloody_Roar_2.Usuario
@{
    ViewData["Title"] = "Registrar Cuenta";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card shadow-lg p-4" style="width: 380px; border-radius: 15px;">

        <h3 class="text-center mb-3">Crear Cuenta</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form method="post">

            <!-- Nombre -->
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Tu nombre..." required />
                <span class="text-danger" asp-validation-for="Nombre"></span>
            </div>

            <!-- Email -->
                <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" 
                class="form-control" 
                placeholder="tuemail@dominio.com" 
                required />
            <small class="text-muted">Ej: nombre@yahoo.com, nombre@outlook.com, nombre@empresa.com</small>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        
            <!-- Contrase침a -->
            <div class="mb-3">
                <label class="form-label">Contrase침a</label>
                <input asp-for="Contrasenia" class="form-control" type="password" placeholder="Contrase침a..." required />
                <span class="text-danger" asp-validation-for="Contrasenia"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 mt-2" style="padding: 10px;">
                Registrarme
            </button>

        </form>

        <div class="text-center mt-3">
            <a href="/Account/Login" class="text-decoration-none">Volver al inicio de sesi칩n</a>
        </div>

    </div>
</div>
