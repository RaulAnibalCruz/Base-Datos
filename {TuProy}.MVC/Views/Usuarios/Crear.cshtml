@model Bloody_Roar_2.Usuario

<h2>Crear Usuario</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Crear" method="post">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Contrase√±a</label>
        <input asp-for="Contrasenia" type="password" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" placeholder="usuario@gmail.com" />
        <small class="form-text text-muted">Debe ser una cuenta gmail (ejemplo: usuario@gmail.com)</small>
    </div>

    <button type="submit" class="btn btn-success">Crear</button>
</form>

<a class="btn btn-secondary mt-3" href="/Usuarios/Index">Volver a Lista</a>
